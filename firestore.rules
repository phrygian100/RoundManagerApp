rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(resource) {
      return resource.data.ownerId == request.auth.uid;
    }

    // Check if user has access to account data (either owner or member)
    function hasAccountAccess(ownerId) {
      return request.auth.uid == ownerId || 
        exists(/databases/$(database)/documents/accounts/$(ownerId)/members/$(request.auth.uid));
    }

    function getAccountIdFromData(data) {
      // Prefer accountId only if it's present AND non-empty; otherwise fall back to ownerId.
      return (('accountId' in data) && data.accountId != null && data.accountId != '')
        ? data.accountId
        : (('ownerId' in data) ? data.ownerId : null);
    }

    // Check if user has access to existing resource
    function hasResourceAccess(resource) {
      // Support both legacy `ownerId` and newer `accountId` fields.
      return (
        getAccountIdFromData(resource.data) != null &&
        hasAccountAccess(getAccountIdFromData(resource.data))
      ) ||
      // Fallback: allow a user to access their own doc by id (e.g. /users/{uid} style)
      (request.auth.uid == resource.id);
    }

    // Check if user has access for creating new resource
    function hasCreateAccess() {
      // Support both legacy `ownerId` and newer `accountId` fields.
      return (
        getAccountIdFromData(request.resource.data) != null &&
        hasAccountAccess(getAccountIdFromData(request.resource.data))
      ) ||
      // Allow users to create their own doc keyed by UID (rare, but keep)
      (request.auth.uid == request.resource.data.ownerId);
    }

    match /quotes/{quoteId} {
      // Allow list operations for signed in users - the query filter will handle access control
      allow list: if isSignedIn();
      allow get: if isSignedIn() && hasResourceAccess(resource);
      allow create: if isSignedIn() && hasCreateAccess();
      allow update, delete: if isSignedIn() && hasResourceAccess(resource);
    }

    match /clients/{clientId} {
      // Client portal access is handled via Cloud Functions. Do not allow public reads/writes.
      allow get, list: if isSignedIn() && hasResourceAccess(resource);
      allow create: if isSignedIn() && hasCreateAccess();
      allow update, delete: if isSignedIn() && hasResourceAccess(resource);
    }

    match /jobs/{jobId} {
      // Client portal access is handled via Cloud Functions. Do not allow public reads.
      allow get, list: if isSignedIn() && hasResourceAccess(resource);
      allow create: if isSignedIn() && hasCreateAccess();
      allow update, delete: if isSignedIn() && hasResourceAccess(resource);
    }

    // Service plans (new separated scheduling model)
    match /servicePlans/{planId} {
      // Client portal access is handled via Cloud Functions. Do not allow public reads.
      allow get, list: if isSignedIn() && hasResourceAccess(resource);
      allow create: if isSignedIn() && hasCreateAccess();
      allow update, delete: if isSignedIn() && hasResourceAccess(resource);
    }

    match /payments/{paymentId} {
      // Client portal access is handled via Cloud Functions. Do not allow public reads.
      allow get, list: if isSignedIn() && hasResourceAccess(resource);
      allow create: if isSignedIn() && hasCreateAccess();
      allow update, delete: if isSignedIn() && hasResourceAccess(resource);
    }

    match /unknownPayments/{unknownPaymentId} {
      // Allow list operations for signed in users - the query filter will handle access control
      allow list: if isSignedIn();
      allow get: if isSignedIn() && hasResourceAccess(resource);
      allow create: if isSignedIn() && hasCreateAccess();
      allow update, delete: if isSignedIn() && hasResourceAccess(resource);
    }

    // Each user can manage a single document under /users/{uid}
    match /users/{userId} {
      allow create: if isSignedIn() && request.auth.uid == userId;
      // Do not allow public reads. Allow self-read and account-member read of the account owner's doc.
      allow read: if isSignedIn() && (
        request.auth.uid == userId ||
        exists(/databases/$(database)/documents/accounts/$(userId)/members/$(request.auth.uid))
      );
      allow update, delete: if isSignedIn() && request.auth.uid == userId;
    }

    // Business portals - public read access for client portal login pages
    // Documents are keyed by normalized business name (e.g., "tgmwindowcleaning")
    match /businessPortals/{portalId} {
      // Anyone can read business portal info (needed for unauthenticated client login)
      allow read: if true;
      // Only the business owner can create their portal
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.ownerId;
      // Only the business owner can update/delete their existing portal
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.ownerId;
    }

    // Quote requests from client portal - public create for prospective customers
    match /quoteRequests/{requestId} {
      // Quote requests are created via Cloud Functions for the public client portal.
      allow create: if false;
      // Only the business owner can read/update/delete their quote requests
      allow read, update, delete: if isSignedIn() && request.auth.uid == resource.data.businessId;
    }

    // Materials configuration - owner can read/write their own config
    match /materialsConfig/{ownerId} {
      allow read, write: if isSignedIn() && request.auth.uid == ownerId;
    }

    match /accounts/{accountId} {
      allow read: if isSignedIn() && hasAccountAccess(accountId);
      allow create, update, delete: if isSignedIn() && request.auth.uid == accountId;

      match /members/{memberId} {
        allow read: if isSignedIn() && hasAccountAccess(accountId);
        // Only owners can create/update member records. Members can delete their own record (leave team).
        allow create, update: if isSignedIn() && request.auth.uid == accountId;
        allow delete: if isSignedIn() && (request.auth.uid == accountId || request.auth.uid == memberId);
      }

      match /vehicles/{vehicleId} {
        allow read: if isSignedIn() && hasAccountAccess(accountId);
        allow write: if isSignedIn() && request.auth.uid == accountId;
      }

      match /rota/{rotaId} {
        allow read: if isSignedIn() && hasAccountAccess(accountId);
        allow write: if isSignedIn() && hasAccountAccess(accountId);
      }
    }

    // Completed weeks - members can read, only owners can write
    match /completedWeeks/{docId} {
      // Allow list operations for signed in users
      allow list: if isSignedIn();
      // Allow read if user is signed in and either:
      // 1. Document has accountId field and user has access to that account
      // 2. Document has ownerId field and user has access to that owner
      // 3. The docId contains the user's ID (for backward compatibility)
      allow get: if isSignedIn() && (
        ('accountId' in resource.data && hasAccountAccess(resource.data.accountId)) ||
        ('ownerId' in resource.data && hasAccountAccess(resource.data.ownerId)) ||
        (docId.matches('.*' + request.auth.uid + '.*'))
      );
      allow create: if isSignedIn() && hasCreateAccess();
      allow update, delete: if isSignedIn() && (
        ('ownerId' in resource.data && isOwner(resource)) ||
        ('accountId' in resource.data && resource.data.accountId == request.auth.uid)
      );
    }

    // Audit logs - owners and members can read, authenticated users can create
    match /auditLogs/{auditId} {
      // Allow authenticated users to create audit log entries for accounts they have access to
      allow create: if isSignedIn() && hasAccountAccess(request.resource.data.ownerId);
      
      // Allow owners and members to read audit logs for their account
      allow read: if isSignedIn() && hasAccountAccess(resource.data.ownerId);
      
      // Allow list operations for owners and members
      allow list: if isSignedIn();
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}