{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/home",
      "destination": "/_marketing/home.html"
    },
    {
      "source": "/pricing", 
      "destination": "/_marketing/pricing.html"
    },
    {
      "source": "/about",
      "destination": "/_marketing/about.html"
    },
    {
      "source": "/contact",
      "destination": "/_marketing/contact.html"
    },
    {
      "source": "/_next/static/(.*)",
      "destination": "/_next/static/$1"
    },
    {
      "source": "/set-password",
      "destination": "/index.html"
    },
    {
      "source": "/forgot-password", 
      "destination": "/index.html"
    },
    {
      "source": "/login",
      "destination": "/index.html"
    },
    {
      "source": "/register",
      "destination": "/index.html"
    },
    {
      "source": "/((?!api|_next|_marketing|favicon.ico|Logo|.*\\.svg|.*\\.png).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options", 
          "value": "nosniff"
        }
      ]
    }
  ]
} 